<% tabindex_on '#search_field' %>

<% content_for :discovery_insert do %>
  <%= auto_discovery_link_tag(:atom, search_events_url(:query => @query, :format => 'atom'), :title => "atom_search_results_for_query", :query => @query)%>
<% end -%>
<%= render :partial => 'search_section', :locals => {:description => "current", :events => @grouped_events[:current]} %>
<%= render :partial => 'search_section', :locals => {:description => "past", :events => @grouped_events[:past]} %>

<div id='list_filters' class='sidebar'>
  <h3><%= t("subscribe_to") %></h3>
  <ul>
    <li><%= link_to t("icalendar_feed"), url_for(:action => "search", :protocol => "webcal", :only_path => false, :query => @query, :format => "ics") %></li>
    <li><%= link_to t("atom_feed"), search_events_url(:query => @query, :format => "atom") %></li>
    <li><%= link_to t("google_calendar"), "http://www.google.com/calendar/render?cid="+CGI::escape(search_events_url(:query => @query, :format => "ics")) %></li>
  </ul>

  <h3><%= t("export_to") %></h3>
  <ul>
    <li><%= link_to t("icalendar_file"), search_events_url(:query => @query, :format => "ics") %></li>
    <li><%= link_to t("google_calendar"), "http://www.google.com/calendar/render?cid="+cgi_escape(search_events_url(:query => @query, :format => "ics")) %></li>
  </ul>
</div>
