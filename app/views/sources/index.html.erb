<h1><%= t("listing_sources") %></h1>

<table>
  <tr>
    <th><%= t("manage") %></th>
    <th><%= t("url") %></th>
  </tr>

  <% for source in @sources %>
  <tr class="<%= cycle 'odd', 'even' %>">
    <td>
      <%= link_to t("show"), source %> | 
      <%= link_to t("destroy"), source, :confirm => t("are_you_sure"), :method => :delete %>
    </td>
    <td><%= source_url_link source %></td>
  </tr>
  <% end %>
</table>

<br />

<%= will_paginate @versions %>
